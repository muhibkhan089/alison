<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="cminds_multiwishlist"
             translate="label"
             sortOrder="900"
             class="cminds-icon">
            <label>Cminds Multi Wishlist</label>
        </tab>
        <section id="multiwishlist"
                 translate="label"
                 type="text"
                 sortOrder="90"
                 showInDefault="1"
                 showInWebsite="1"
                 showInStore="1">
            <label>Multi Wishlist</label>
            <tab>cminds_multiwishlist</tab>
            <resource>Cminds_Multiwishlist::multiwishlist</resource>
            <group id="general"
                   translate="label"
                   type="text"
                   sortOrder="10"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>General</label>
                <field id="enabled"
                       translate="label"
                       type="select"
                       sortOrder="10"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
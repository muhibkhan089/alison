<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="wishlist" resource="default" engine="innodb" comment="Wishlist main table">
        <constraint xsi:type="foreign" disabled="true" referenceId="WISHLIST_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID" table="wishlist"
                    column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="unique" disabled="true" referenceId="WISHLIST_CUSTOMER_ID">
            <column name="customer_id"/>
        </constraint>
    </table>
</schema>
